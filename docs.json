{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "NPC Builder",
  "colors": {
    "primary": "#359BFA",
    "light": "#99ccfc",
    "dark": "#0568c4"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "openapi": {
              "source": "openapi.yaml",
              "directory": "api-reference"
            }
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://npcbuilder.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Community",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://npcbuilder.com/news",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@npcbuilder.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "App",
      "href": "https://app.npcbuilder.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/npc_builder",
      "github": "https://github.com/NPC-Builder",
      "linkedin": "https://www.linkedin.com/company/npc-builder/",
      "youtube": "https://www.youtube.com/@NPCBuilderApp",
      "instagram": "https://www.instagram.com/npc_builder/"
    }
  }
}